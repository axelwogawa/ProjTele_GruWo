<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonInherit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="277dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:text="übernehmen" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonInherit"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="99dp"
        android:id="@+id/listView" />

    <EditText
        android:id="@+id/editTextInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Text eingeben..." />

    <TextView
        android:id="@+id/textViewList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextInsert"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="59dp"
        android:text="zuletzt verwendet:" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewList"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewList"
        android:layout_marginTop="32dp"
        android:text="zurück" />


    <ToggleButton
        android:id="@+id/toggleInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonBack"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/textViewList"
        android:layout_toRightOf="@+id/textViewList"
        android:onClick="onToggleClicked"

        android:text="Eingabe"
        android:textOff="Eingabe"
        android:textOn="Eingabe"/>

    <ToggleButton
        android:id="@+id/toggleMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toggleInsert"
        android:layout_toEndOf="@+id/toggleInsert"
        android:layout_toRightOf="@+id/toggleInsert"
        android:onClick="onToggleClicked"

        android:text="Notizen"
        android:textOff="Notizen"
        android:textOn="Notizen" />

</RelativeLayout>
